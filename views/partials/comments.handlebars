<div class="comments">
    {{!-- arrays don't have named properties like objects, so need to use 'this' --}}
  {{#each this}}
  <section class="comment">
    <div class="meta">
      {{user.username}} on {{created_at}}
    </div>
    <div class="text">
      {{comment_text}}
    </div>
  </section>
  {{/each}}
</div>